<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="AutiAssist_MobileApp.Views.FlyoutHeader"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HeightRequest="150">
    <ContentView.Content>
        <Grid BackgroundColor="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Aspect="AspectFit"
                HorizontalOptions="CenterAndExpand"
                Opacity="1"
                Source="logo_gradient.jpg"
                VerticalOptions="CenterAndExpand" />
            <Image Grid.Row="1" BackgroundColor="White" />
        </Grid>
    </ContentView.Content>
</ContentView>